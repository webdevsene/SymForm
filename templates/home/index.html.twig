{% extends 'base.html.twig' %}

{% block title %}Les formations
{% endblock %}

{% block body %}

	<!-- Section-->
	<section class="py-5">
		<div class="container px-4 px-lg-5 mt-5">
			<div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">

				{% for formation in formations %}
					<div class="col mb-5">
						<div
							class="card h-100">
							<!-- Product image-->
                            {% if formation.image %}
							    <img class="card-img-top" src="{{ formation.image }}" alt="..."/>
                            {% endif %}
							<!-- Product details-->
							<div class="card-body p-4">
								<div
									class="text-center">
									<!-- Product name-->
									<h5 class="fw-bolder">{{ formation.nom }}</h5>
									<!-- Product price-->
									Lecture {{ formation.prix}} mn
								</div>
							</div>
							<!-- Product actions-->
							<div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
								<div class="text-center">
									<a class="btn btn-outline-dark mt-auto" href="{{ relative_path(path('show', {'id': formation.id})) }}">En savoir plus !</a>
								</div>
							</div>
						</div>
					</div>
				{% endfor %}

			</div>
		</div>
	</section>
{% endblock %}
